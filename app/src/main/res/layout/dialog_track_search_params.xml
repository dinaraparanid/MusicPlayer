<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="view_model"
            type="com.dinaraparanid.prima.mvvmp.view_models.TrackSearchParamsViewModel" />
    </data>

    <carbon.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="120dp">

        <carbon.widget.TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:breakStrategy="simple"
            android:elegantTextHeight="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/track_parameters"
            android:textColor="@{view_model.fontColor}"
            android:textSize="16sp"
            android:typeface="@{view_model.font}"
            app:carbon_elevation="12dp"
            app:carbon_elevationAmbientShadowColor="@{view_model.getBloomOrTransparent(view_model.primaryColor)}"
            app:carbon_elevationShadowColor="@{view_model.getBloomOrTransparent(view_model.primaryColor)}"
            app:carbon_elevationSpotShadowColor="@{view_model.getBloomOrTransparent(view_model.primaryColor)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <carbon.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3">

            <carbon.widget.LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <carbon.widget.TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:breakStrategy="simple"
                    android:elegantTextHeight="true"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/title"
                    android:textColor="@{view_model.fontColor}"
                    android:textSize="14sp"
                    android:typeface="@{view_model.font}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <carbon.widget.TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:breakStrategy="simple"
                    android:elegantTextHeight="true"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/artist"
                    android:textColor="@{view_model.fontColor}"
                    android:textSize="14sp"
                    android:typeface="@{view_model.font}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </carbon.widget.LinearLayout>

            <carbon.widget.LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <carbon.widget.EditText
                    android:id="@+id/search_track_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:breakStrategy="simple"
                    android:focusable="true"
                    android:elegantTextHeight="true"
                    android:singleLine="true"
                    android:text="@{view_model.presenter.searchedTrackTitle}"
                    android:textColor="@{view_model.fontColor}"
                    android:textSize="14sp"
                    android:typeface="@{view_model.font}" />

                <carbon.widget.EditText
                    android:id="@+id/search_artist_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:breakStrategy="simple"
                    android:focusable="true"
                    android:elegantTextHeight="true"
                    android:singleLine="true"
                    android:text="@{view_model.presenter.searchedArtistName}"
                    android:textColor="@{view_model.fontColor}"
                    android:textSize="14sp"
                    android:typeface="@{view_model.font}" />

            </carbon.widget.LinearLayout>
        </carbon.widget.LinearLayout>
    </carbon.widget.ConstraintLayout>
</layout>