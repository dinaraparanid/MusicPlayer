<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/about_app_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/about_app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:breakStrategy="simple"
        android:elegantTextHeight="true"
        android:fontFamily="@font/pristina"
        android:gravity="center"
        android:scrollbarThumbHorizontal="@null"
        android:scrollbarThumbVertical="@null"
        android:scrollbarTrackHorizontal="@null"
        android:scrollbarTrackVertical="@null"
        android:text="@string/app_name"
        android:textAllCaps="false"
        android:textColor="?attr/colorPrimary"
        android:textColorHighlight="@null"
        android:textColorHint="@null"
        android:textColorLink="@null"
        android:textCursorDrawable="@null"
        android:textSize="60sp"
        android:textStyle="italic"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/version_button"
        app:layout_constraintEnd_toStartOf="@+id/about_app_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/about_app_title"
        app:srcCompat="@drawable/cat" />

    <Button
        android:id="@+id/version_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:breakStrategy="simple"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:scrollbarThumbHorizontal="@null"
        android:scrollbarThumbVertical="@null"
        android:scrollbarTrackHorizontal="@null"
        android:scrollbarTrackVertical="@null"
        android:text="@string/version"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="?attr/colorPrimary"
        android:textColorHighlight="@null"
        android:textColorHint="@null"
        android:textColorLink="@null"
        android:textCursorDrawable="@null"
        android:textSize="13sp"
        android:includeFontPadding="false"
        app:iconTint="@null"
        app:layout_constraintEnd_toEndOf="@+id/about_app_title"
        app:layout_constraintStart_toStartOf="@+id/about_app_title"
        app:layout_constraintTop_toBottomOf="@+id/about_app_title" />

    <Button
        android:id="@+id/github_button"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:backgroundTint="?attr/colorPrimary"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="sans-serif"
        android:padding="10dp"
        android:scrollbarThumbHorizontal="@null"
        android:scrollbarThumbVertical="@null"
        android:scrollbarTrackHorizontal="@null"
        android:scrollbarTrackVertical="@null"
        android:text="@string/github"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="?attr/colorOnError"
        android:textColorHighlight="@null"
        android:textColorHint="@null"
        android:textColorLink="@null"
        android:textCursorDrawable="@null"
        android:textSize="16sp"
        app:icon="@drawable/github_icon"
        app:iconTint="@null"
        app:iconTintMode="multiply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/version_button" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/version_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/about_app_title"
        app:layout_constraintTop_toTopOf="@+id/about_app_title"
        app:srcCompat="@drawable/avatar" />

    <Button
        android:id="@+id/vk_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="?attr/colorPrimary"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="sans-serif"
        android:padding="10dp"
        android:scrollbarThumbHorizontal="@null"
        android:scrollbarThumbVertical="@null"
        android:scrollbarTrackHorizontal="@null"
        android:scrollbarTrackVertical="@null"
        android:text="@string/vkontakte"
        android:textAllCaps="false"
        android:textColor="?attr/colorOnError"
        android:textColorHighlight="@null"
        android:textColorHint="@null"
        android:textColorLink="@null"
        android:textCursorDrawable="@null"
        android:textSize="16sp"
        app:icon="@drawable/vk_icon"
        app:iconTint="@null"
        app:layout_constraintEnd_toEndOf="@+id/github_button"
        app:layout_constraintStart_toStartOf="@+id/github_button"
        app:layout_constraintTop_toBottomOf="@+id/github_button" />

    <Button
        android:id="@+id/email_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="sans-serif"
        android:padding="10dp"
        android:scrollbarThumbHorizontal="@null"
        android:scrollbarThumbVertical="@null"
        android:scrollbarTrackHorizontal="@null"
        android:scrollbarTrackVertical="@null"
        android:text="@string/email"
        android:textAllCaps="false"
        android:textColor="?attr/colorOnError"
        android:textColorHighlight="@null"
        android:textColorHint="@null"
        android:textColorLink="@null"
        android:textCursorDrawable="@null"
        android:textSize="16sp"
        app:icon="@drawable/email_icon"
        app:layout_constraintEnd_toEndOf="@+id/vk_button"
        app:layout_constraintStart_toStartOf="@+id/vk_button"
        app:layout_constraintTop_toBottomOf="@+id/vk_button" />

    <Button
        android:id="@+id/FAQ_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="sans-serif"
        android:padding="10dp"
        android:scrollbarThumbHorizontal="@null"
        android:scrollbarThumbVertical="@null"
        android:scrollbarTrackHorizontal="@null"
        android:scrollbarTrackVertical="@null"
        android:text="@string/faq"
        android:textAllCaps="true"
        android:textColor="?attr/colorOnError"
        android:textColorHighlight="@null"
        android:textColorHint="@null"
        android:textColorLink="@null"
        android:textCursorDrawable="@null"
        android:textSize="16sp"
        app:icon="@drawable/question_icon"
        app:layout_constraintEnd_toEndOf="@+id/email_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/email_button"
        app:layout_constraintTop_toBottomOf="@+id/email_button" />

</androidx.constraintlayout.widget.ConstraintLayout>