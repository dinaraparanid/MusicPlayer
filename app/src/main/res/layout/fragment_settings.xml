<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settings_big_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/settings_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:showDividers="middle"
            android:divider="@drawable/divider">

            <Button
                android:id="@+id/language_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:breakStrategy="simple"
                android:clickable="true"
                android:contentDescription="@string/language_button"
                android:drawingCacheQuality="low"
                android:elegantTextHeight="true"
                android:focusable="true"
                android:fontFamily="sans-serif"
                android:gravity="start|center_vertical"
                android:inputType="text"
                android:letterSpacing="0.00001"
                android:maxWidth="@null"
                android:minWidth="@null"
                android:minHeight="@null"
                android:scrollbarThumbHorizontal="@null"
                android:scrollbarThumbVertical="@null"
                android:scrollbarTrackHorizontal="@null"
                android:scrollbarTrackVertical="@null"
                android:text="@string/language"
                android:textColor="@null"
                android:textColorHighlight="@null"
                android:textColorHint="@null"
                android:textColorLink="@null"
                android:textCursorDrawable="@null"
                android:textSize="16sp"
                app:iconTint="@null"
                app:rippleColor="@null" />

            <Button
                android:id="@+id/font_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:breakStrategy="simple"
                android:clickable="true"
                android:contentDescription="@string/language_button"
                android:drawingCacheQuality="low"
                android:elegantTextHeight="true"
                android:focusable="true"
                android:fontFamily="sans-serif"
                android:gravity="start|center_vertical"
                android:inputType="text"
                android:letterSpacing="0.00001"
                android:maxWidth="@null"
                android:minWidth="@null"
                android:minHeight="@null"
                android:scrollbarThumbHorizontal="@null"
                android:scrollbarThumbVertical="@null"
                android:scrollbarTrackHorizontal="@null"
                android:scrollbarTrackVertical="@null"
                android:text="@string/font"
                android:textColor="@null"
                android:textColorHighlight="@null"
                android:textColorHint="@null"
                android:textColorLink="@null"
                android:textCursorDrawable="@null"
                android:textSize="16sp"
                app:iconTint="@null"
                app:rippleColor="@null" />

            <Button
                android:id="@+id/themes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:breakStrategy="simple"
                android:clickable="true"
                android:contentDescription="@string/language_button"
                android:drawingCacheQuality="low"
                android:elegantTextHeight="true"
                android:focusable="true"
                android:fontFamily="sans-serif"
                android:gravity="start|center_vertical"
                android:inputType="text"
                android:letterSpacing="0.00001"
                android:maxWidth="@null"
                android:minWidth="@null"
                android:minHeight="@null"
                android:scrollbarThumbHorizontal="@null"
                android:scrollbarThumbVertical="@null"
                android:scrollbarTrackHorizontal="@null"
                android:scrollbarTrackVertical="@null"
                android:text="@string/themes"
                android:textColor="@null"
                android:textColorHighlight="@null"
                android:textColorHint="@null"
                android:textColorLink="@null"
                android:textCursorDrawable="@null"
                android:textSize="16sp"
                app:iconTint="@null"
                app:rippleColor="@null" />

            <Switch
                android:id="@+id/playlist_image_circling"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:breakStrategy="simple"
                android:checked="true"
                android:clickable="true"
                android:contentDescription="@string/language_button"
                android:drawingCacheQuality="low"
                android:elegantTextHeight="true"
                android:focusable="true"
                android:fontFamily="sans-serif"
                android:gravity="start|center_vertical"
                android:inputType="text"
                android:letterSpacing="@null"
                android:maxWidth="@null"
                android:minWidth="@null"
                android:minHeight="@null"
                android:paddingStart="17dp"
                android:scrollbarThumbHorizontal="@null"
                android:scrollbarThumbVertical="@null"
                android:scrollbarTrackHorizontal="@null"
                android:scrollbarTrackVertical="@null"
                android:text="@string/playlist_circle_image"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@null"
                android:textColorHighlight="@null"
                android:textColorHint="@null"
                android:textColorLink="@null"
                android:textCursorDrawable="@null"
                android:textSize="16sp"
                android:thumbTint="@drawable/switch_thumb"
                android:trackTint="@drawable/switch_track"
                app:iconTint="@null"
                app:rippleColor="@null" />

            <Switch
                android:id="@+id/save_progress"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:breakStrategy="simple"
                android:checked="true"
                android:clickable="true"
                android:contentDescription="@string/language_button"
                android:drawingCacheQuality="low"
                android:elegantTextHeight="true"
                android:focusable="true"
                android:fontFamily="sans-serif"
                android:gravity="start|center_vertical"
                android:inputType="text"
                android:letterSpacing="@null"
                android:maxWidth="@null"
                android:minWidth="@null"
                android:minHeight="@null"
                android:paddingStart="17dp"
                android:scrollbarThumbHorizontal="@null"
                android:scrollbarThumbVertical="@null"
                android:scrollbarTrackHorizontal="@null"
                android:scrollbarTrackVertical="@null"
                android:text="@string/save_progress"
                android:textColor="@null"
                android:textColorHighlight="@null"
                android:textColorHint="@null"
                android:textColorLink="@null"
                android:textCursorDrawable="@null"
                android:textSize="16sp"
                android:thumbTint="@drawable/switch_thumb"
                android:trackTint="@drawable/switch_track"
                app:iconTint="@null"
                app:rippleColor="@null"
                app:trackTintMode="src_in" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>