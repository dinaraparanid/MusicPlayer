<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="presenter"
            type="com.dinaraparanid.prima.mvvmp.presenters.TrackItemPresenter" />
    </data>

    <carbon.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:carbon_elevation="4dp"
        app:carbon_elevationAmbientShadowColor="@{presenter.getBloomOrTransparent(presenter.primaryColor)}"
        app:carbon_elevationShadowColor="@{presenter.getBloomOrTransparent(presenter.primaryColor)}"
        app:carbon_elevationSpotShadowColor="@{presenter.getBloomOrTransparent(presenter.primaryColor)}"
        app:carbon_rippleColor="@{presenter.fontColor}"
        app:carbon_rippleStyle="over">

        <carbon.widget.TextView
            android:id="@+id/track_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:breakStrategy="simple"
            android:ellipsize="end"
            android:maxLines="1"
            android:minLines="1"
            android:paddingTop="8dp"
            android:singleLine="true"
            android:text="@{presenter.trackTitle}"
            android:textColor="@{presenter.textColor}"
            android:textSize="18sp"
            android:typeface="@{presenter.font}"
            app:layout_constraintBottom_toTopOf="@id/track_author_album"
            app:layout_constraintEnd_toStartOf="@+id/track_item_settings"
            app:layout_constraintStart_toEndOf="@+id/track_album_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <carbon.widget.TextView
            android:id="@+id/track_author_album"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:breakStrategy="simple"
            android:ellipsize="end"
            android:maxLines="1"
            android:minLines="1"
            android:paddingBottom="5dp"
            android:singleLine="true"
            android:text="@{presenter.trackArtistAndAlbum}"
            android:textColor="@{presenter.textColor}"
            android:textColorHighlight="@null"
            android:textColorHint="@null"
            android:textColorLink="@null"
            android:textCursorDrawable="@null"
            android:textSize="15sp"
            android:typeface="@{presenter.font}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/track_item_settings"
            app:layout_constraintStart_toEndOf="@+id/track_album_image"
            app:layout_constraintTop_toBottomOf="@id/track_title" />

        <carbon.widget.ImageView
            android:id="@+id/track_album_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="15dp"
            android:scaleType="fitXY"
            app:carbon_cornerRadius="@{presenter.isCoverRotating ? 8 : 0}"
            app:layout_constraintBottom_toBottomOf="@+id/track_author_album"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/track_title" />

        <carbon.widget.ImageView
            android:id="@+id/track_item_settings"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="5dp"
            android:background="@null"
            android:clickable="true"
            android:contentDescription="@string/track_item_settings"
            android:focusable="true"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:scaleType="fitCenter"
            app:carbon_rippleColor="@{presenter.primaryColor}"
            app:carbon_rippleStyle="over"
            app:carbon_src="@drawable/three_dots"
            app:carbon_tint="@{presenter.primaryColor}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </carbon.widget.ConstraintLayout>
</layout>